<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

        <h2 class="title is-4"> Log in </h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <div class="control">
              <%= f.input :email, wrapper: false, label_html: { class:"label" },
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class:"input" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password, wrapper: false, label_html: { class: "label"},
                          required: false,
                          input_html: { autocomplete: "current-password", class:"input" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">

              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, "Log in", class:"button is-info"%>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
