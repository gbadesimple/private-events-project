<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

        <h2 class="title is-4"> Edit <%= resource_name.to_s.humanize %></h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="field">
            <div class="field">
            <%= f.input :name, required: true, autofocus: true, wrapper: false,
                        input_html: { class:"input"}, label_html: { class:"label"} %>
            </div>
          </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <div class="field">
              <div class="control">
            <%= f.input :username, wrapper: false, label_html: { class:"label"},
                        required: true,
                        input_html: { class:"input" } %>
              </div>
            </div>

            <div class="field">
              <div class="control">
            <%= f.input :email, wrapper: false, label_html: { class:"label"},
                        required: true,
                        input_html: { class:"input" } %>
              </div>
            </div>
            <div class="field">
              <div class="control">
            <%= f.input :password, wrapper: false, label_html: { class:"label"},
                        hint: "leave it blank if you don't want to change it",
                        required: false,
                        input_html: { class:"input" } %>
              </div>
            </div>
            <div class="field">
              <div class="control">
            <%= f.input :password_confirmation, wrapper: false, label_html: { class:"label"},
                        required: false,
                        input_html: { class:"input" } %>
              </div>
            </div>
            <div class="field">
              <div class="control">
            <%= f.input :current_password, wrapper: false, label_html: { class:"label"},
                        hint: "we need your current password to confirm your changes",
                        required: true,
                        input_html: { class:"input" } %>
              </div>
          </div>

          <div class="field">
            <div class="control">
            <%= f.button :submit, "Update", class:"button is-info" %>
            </div>
          </div>
        <% end %>

        <h3>Cancel my account</h3>

        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back %>



      </div>
    </div>
  </div>
</div>
