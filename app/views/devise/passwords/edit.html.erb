<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

        <h2 class="title is-4"> Change your password </h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="field">
            <div class="control">
              <%= f.input :password, wrapper: false,
                          label_html: { class:"label" },
                          required: true,
                          autofocus: true,
                          hint: ("#{@minimum_password_length} characters minimum " if @minimum_password_length),
                          input_html: { class: "input" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation, wrapper: false,
                          label: "Confirm your new password",
                          required: true,
                          input_html: { class: "input" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
            <%= f.button :submit, "Change my password", class:"button is-info" %>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
