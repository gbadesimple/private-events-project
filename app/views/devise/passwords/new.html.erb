<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

        <h2 class="title is-4"> Forgot your password? </h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="field">
            <div>
              <%= f.input :email, wrapper: false, label_html: { class:"label"},
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email", class:"input" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, "Send me reset password instructions", class:"button is-primary" %>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
