<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

        <h1 class="title is-4"> My Events </h1>


        <div class="field">
          <div class="control">

            <p>
            <strong> Name: </strong>
            <%= @user.name %><br />
            <strong> Email: </strong>
            <%= @user.email %>
            </p>

            <br />

        <div class="event-list">
              <% current_user.events.each do |event|  %>
              <p>
              <Strong> Event: </strong>
              <%= event.name %>
              </p>
              <% end %>
        </div>

        <p>
          <%= link_to "back", root_path, class:"button is-danger" %>
        </p>
          </div>
        </div>


      </div>
    </div>
  </div>
</div>
