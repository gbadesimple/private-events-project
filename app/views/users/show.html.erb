<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

        <h1 class="title is-4"> My Events </h1>


        <div class="event-list">
          <% current_user.events.each do |event|  %>
            <p>
            <Strong> Event: </strong>
              <%= event.name %>
              <br />

            <strong> Description: </strong>
              <%= event.description %>
              <br />

            <strong> Location: </strong>
              <%= event.location %>
              <br />

              <%= link_to "Show", event_path %>
            </p>

          <hr>
          <% end %>

        </div>

        <p>
          <%= link_to "back", root_path, class:"button is-danger" %>
        </p>


      </div>
    </div>
  </div>
</div>
