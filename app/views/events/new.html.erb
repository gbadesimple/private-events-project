<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

        <h1 class="title is-4"> Create Event </h1>

        <%= simple_form_for @event do |f| %>
        <div class="field">
          <div class="control">
            <%= f.input :name, wrapper: false, label_html: { class:"label"}, input_html: { autofocus: true, class:"input"},
                                hint: "example:- Prison escape" %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.input :description, wrapper: false, label_html: { class:"label"}, input_html: { autofocus: true, class:"input"},
                                hint: "example:- Attempt to breakthrough the wall" %>
        <div class="field">
          <div class="control">
            <%= f.input :date, as: :date, order: [ :day, :month, :year ], wrapper: false,
                                label_html: { class:"label"} %>
          </div>
        </div>
        <div class="field">
            <%= f.submit "Create event", class:"button" %>
            <%= link_to "Back", root_path, class:"button is-danger" %>
        </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
