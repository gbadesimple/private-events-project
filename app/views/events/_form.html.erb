<%= simple_form_for @event do |f| %>
<div class="field">
  <div class="control">
    <%= f.input :name, wrapper: false, label_html: { class:"label"}, input_html: { autofocus: true, class:"input"},
                        hint: "example:- Prison escape" %>
  </div>
</div>
<div class="field">
  <div class="control">
    <%= f.input :description, wrapper: false, label_html: { class:"label"}, input_html: { autofocus: true, class:"input"},
                        hint: "example:- Attempt to breakthrough the wall" %>
  </div>
</div>
<div class="field">
  <div class="control">
    <%= f.input :location, wrapper: false, label_html: { class:"label"}, input_html: { autofocus: true, class:"input"},
                        hint: "example:- United kingdom" %>
  </div>
</div>

<div class="field">
  <div class="control">
    <%= f.input :date, as: :date, order: [ :day, :month, :year ], wrapper: false,
                        label_html: { class:"label"} %>
  </div>
</div>
<div class="field">
    <%= f.submit "Submit", class:"button" %>
</div>

<% end %>
